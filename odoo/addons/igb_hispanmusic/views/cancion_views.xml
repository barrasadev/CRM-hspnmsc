        <field name="name">Canciones</field>
        <field name="res_model">igb_hispanmusic.cancion</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_cancion_form" model="ir.ui.view">
        <field name="name">igb_hispanmusic.cancion.form</field>
        <field name="model">igb_hispanmusic.cancion</field>
        <field name="arch" type="xml">
            <form string="CanciÃ³n">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="spotify"/>
                            <field name="youtube"/>
                            <field name="applemusic"/>
                        </group>
                        <group>
                            <field name="portada" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cancion_tree" model="ir.ui.view">
        <field name="name">igb_hispanmusic.cancion.tree</field>
        <field name="model">igb_hispanmusic.cancion</field>
        <field name="arch" type="xml">
            <tree string="Canciones">
                <field name="nombre"/>
                <field name="spotify"/>
                <field name="youtube"/>
            </tree>
        </field>
    </record>
</odoo>
