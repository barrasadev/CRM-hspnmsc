<odoo>
    <record id="action_tipo_campana_playlist_tree" model="ir.actions.act_window">
        <field name="name">Tipos de Campaña - Playlist</field>
        <field name="res_model">igb_hispanmusic.tipo_campana_playlist</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_tipo_campana_playlist_form" model="ir.ui.view">
        <field name="name">igb_hispanmusic.tipo_campana_playlist.form</field>
        <field name="model">igb_hispanmusic.tipo_campana_playlist</field>
        <field name="arch" type="xml">
            <form string="Tipo de Campaña - Playlist">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="nombre"/>
                            <field name="descripcion"/>
                            <field name="precio"/>
                            <field name="coste"/>
                            <field name="seguidores"/>
                            <field name="reproducciones"/>
                        </group>
                        <group>
                            <field name="imagen" widget="image" class="oe_avatar" options="{'size': [200, 200]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tipo_campana_playlist_tree" model="ir.ui.view">
        <field name="name">igb_hispanmusic.tipo_campana_playlist.tree</field>
        <field name="model">igb_hispanmusic.tipo_campana_playlist</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Campaña - Playlist">
                <field name="imagen" widget="image" options="{'size': [100, 100]}"/>
                <field name="nombre"/>
                <field name="precio"/>
                <field name="coste"/>
                <field name="seguidores"/>
                <field name="reproducciones"/>
            </tree>
        </field>
    </record>
</odoo>
